<div class="container py-4">
    <h1 class="mb-3">Progress Entry</h1>
    <div class="card mb-4">
        <div class="card-body">
            <p class="mb-2"><span class="fw-bold">Participant: </span><%= @progress_entry.participant.user.username %></p>
            <p class="mb-2"><span class="fw-bold">Date: </span><%= @progress_entry.progress_date %></p>
            <p class="mb-2"><span class="fw-bold">Description: </span><%= @progress_entry.description %></p>
            <p class="mb-2"><span class="fw-bold">Points Earned: </span><%= @progress_entry.points_earned %></p>
        </div>
    </div>
    <div class="d-flex gap-2 mt-4">
        <%= link_to 'Edit entry', edit_progress_entry_path(@progress_entry), class: 'btn btn-primary' %>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        <%= link_to 'Back to list', progress_entries_path, class: 'btn btn-secondary' %>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center fs-3">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this progress entry?</p>
                <p>Deleting is permanent, entry will be lost forever.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= button_to 'Delete', @progress_entry, method: :delete, form: { class: 'd-inline' }, class: 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>