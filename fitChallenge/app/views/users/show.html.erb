<div class="container mt-5">
    <div class="card mx-auto">
        <div class="card-body text-center">
            <h2 class="card-title mb-3"><%= @user.username %></h2>
            <p class="card-text"><%= @user.full_name %></p>
            <p class="card-text text-muted mb-1"><%= @user.email %></p>
            <p class="card-text p-3"><strong>Role:</strong> <%= @user.role %></p>
        </div>
    </div>
</div>