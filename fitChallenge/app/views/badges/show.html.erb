<div class="container py-4">
    <h1 class="mb-3"><%= @badge.name %></h1>
    <div class="card mb-4">
        <div class="card-body">
            <p class="mb-2">
                <span class="fw-bold">Description: </span>
                <%= @badge.description %>
            </p>
            <p class="mb-2">
                <span class="fw-bold">Icon URL: </span>
                <%= @badge.icon_url %>
            </p>
            <% if @badge.icon_url.present? %>
                <div class="mt-3">
                    <%= image_tag @badge.icon_url, alt: @badge.name, class: "img-fluid img-thumbnail w-25" %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="d-flex gap-2 mt-4">
        <%= link_to 'Edit badge', edit_badge_path(@badge), class: 'btn btn-primary' %>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        <%= link_to 'Back to list', badges_path, class: 'btn btn-secondary' %>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center fs-3">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this badge?</p>
                <p>Deleting is permanent, badge will be lost forever.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= button_to 'Delete', @badge, method: :delete, form: { class: 'd-inline' }, class: 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>