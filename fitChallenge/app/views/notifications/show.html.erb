<div class="container mt-5">
    <div class="card mx-auto">
        <div class="card-body text-center">
            <h2 class="card-title mb-3"><%= @notification.user.username %></h2>
            <p class="card-text"><%= @notification.message %></p>
            <p class="card-text">Sent on <%= @notification.created_at %></p>
            <p class="card-text fw-bold"><%= @notification.read_status %></p>
        </div>
    </div>
</div>