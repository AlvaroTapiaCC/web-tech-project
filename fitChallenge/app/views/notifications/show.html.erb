<div class="container py-4">
    <h1 class="mb-3">Notification</h1>
    <div class="card mb-4">
        <div class="card-body">
            <p class="mb-2"><span class="fw-bold">User: </span><%= @notification.user.username %></p>
            <p class="mb-2"><span class="fw-bold">Message: </span><%= @notification.message %></p>
            <p class="mb-2"><span class="fw-bold">Sent on: </span><%= @notification.created_at %></p>
            <p class="mb-2"><span class="fw-bold">Read: </span><%= @notification.read_status %></p>
        </div>
    </div>
    <div class="d-flex gap-2 mt-4">
        <%= link_to 'Edit notification', edit_notification_path(@notification), class: 'btn btn-primary' %>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        <%= link_to 'Back to list', notifications_path, class: 'btn btn-secondary' %>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center fs-3">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this notification?</p>
                <p>Deleting is permanent, notification will be lost forever.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= button_to 'Delete', @notification, method: :delete, form: { class: 'd-inline' }, class: 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>