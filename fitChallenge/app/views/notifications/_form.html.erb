<%= form_with model: notification do |form| %>
    <% if notification.errors.any? %>
        <div class="alert alert-danger py-1 mb-3">
            <ul class="mb-0">
                <% notification.errors.full_messages.each do |msg| %>
                    <li class="p-0"><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="mb-3 fw-bold">
        <%= form.label :user_id, class: "form-label" %>
        <%= form.number_field :user_id, class: "form-control", required: true %>
    </div>
    <div class="mb-3 fw-bold">
        <%= form.label :message, class: "form-label" %>
        <%= form.text_area :message, class: "form-control", rows: 4, required: true %>
    </div>
    <div class="form-check mb-3">
        <%= form.check_box :read, class: "form-check-input", id: "notification_read" %>
        <%= form.label :read, "Read?", class: "form-check-label", for: "notification_read" %>
    </div>
    <div>
        <%= form.submit "Save Notification", class: "btn btn-success" %>
    </div>
<% end %>
