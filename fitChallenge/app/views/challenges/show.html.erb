<div class="container py-4">
    <h1 class="mb-3"><%= @challenge.title %></h1>
    <div class="card mb-4">
        <div class="card-body">
            <p class="mb-2">
                <span class="fw-bold">Start date: </span>
                <%= @challenge.start_date %>
            </p>
            <p class="mb-2">
                <span class="fw-bold">End date: </span>
                <%= @challenge.end_date %>
            </p>
            <p class="mb-2">
                <span class="fw-bold">Points awarded: </span>
                <%= @challenge.points %>
            </p>
            <p class="mb-2">
                <span class="fw-bold">Creator: </span>
                <%= @challenge.creator.username %> (id: <%= @challenge.creator.id %>)
            </p>
            <div class="mb-1 fw-bold">Description:</div>
                <div class="border rounded p-3 mt-2 bg-light">
                <%= @challenge.description %>
            </div>
        </div>
    </div>
    <div class="d-flex gap-2 mt-4">
        <%= link_to 'Edit challenge', edit_challenge_path(@challenge), class: 'btn btn-primary' %>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        <%= link_to 'Back to list', challenges_path, class: 'btn btn-secondary' %>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center fs-3">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this challenge?</p>
                <p>Deleting is permanent, challenge will be lost forever.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= button_to 'Delete', @challenge, method: :delete, form: { class: 'd-inline' }, class: 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>